@model SurveyApp.Models.LoginModel

@{
    ViewBag.Title = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
<title>Login</title>
   <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap-theme.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.2.0.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.js"></script> 
<script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/custom.js"></script>
 <style type="text/css">
     .container .disabled {
        background-color: #D0D0D0;
        color: #FFF;
        border: solid 1px #AAA;
        cursor: default;
    }
     .container .btn-primary.disabled:hover, .btn-primary.disabled:focus {
        background-color: #D0D0D0;
        background-position: 0 -15px;
        border-color: #AAA;
    }
    .container .btn-primary.disabled:hover {
        color: #fff;
        background-color: #D0D0D0;
        border-color: #AAA;
    }
 </style>
    </head><body>
<header>
    <div class="content-wrapper" style="overflow:auto;padding:10px;">
        <div class="float-left">
            <p class="site-title">
                <a href="javascript:void(0);"><img src="Images/at3logo.png"></a>
            </p>
        </div>
        <div class="float-right">
            @*<section id="login">
                <ul>
                    <li><a href="/Account/Register" id="registerLink">Register</a></li>
                    <li><a href="/" id="loginLink">Log in</a></li>
                </ul>

            </section>*@
            &nbsp;
            @*<nav>
                <ul id="menu">
                    <li><a href="/Home/Index">Home</a></li>
                    <li><a href="/Home/About">About</a></li>
                    <li><a href="/Home/Contact">Contact</a></li>
                </ul>
            </nav>*@
        </div>
    </div>
</header>
<div id="body" style="padding-bottom:0px;">
    <div class="container" style="background:url(Images/ebitbg.jpg) no-repeat right center;padding-bottom:20px;">

 
  
        <div class="col-sm-4">
            <h2 class="form-signin-heading">Please sign in</h2>
    <section>        
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Log in Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", autocomplete = "off" })
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", autocomplete = "off" })
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox", autocomplete = "off" })
            </li>
        </ol>
        <input type="submit" value="Log in" id="btnLogin" class="btn btn-primary" />
    </fieldset>
    <p style="margin-top: 20px;">
        @*@Html.ActionLink("Register", "Register") if you don't have an account.*@
    </p>
}
    </section>
 </div>
</div></div>
<footer>
    <div class="content-wrapper" style="padding:20px;">
        <div class="float-left">
            <p>&copy; @DateTime.Now.Year - eBit (Evidence Based Intervention and Treatment)</p>
        </div>
    </div>
</footer>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
    <script type="text/javascript">
        $(function () {
            $("form").submit(function () {
                if ($("#btnLogin").hasClass("disabled") == true) {
                    return false;
                }
                $("#btnLogin").addClass("disabled");

            });
        });
    </script>
</body>

</html>
