@{
    ViewBag.Title = "Child Information Editor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><a href="javascript:void(0);" id="back" onclick="history.go(-1);"></a> &nbsp;Child Information Editor</h2>

<style>
    ._panel { background: #fafafa; border: solid 1px #cccccc; padding: 10px; border-radius: 6px; }
</style>
<br />
<form class="form-horizontal" role="form">
        <div class="form-group">
        <label class="control-label col-sm-2" for="teacher">Study:</label>
        <div class="col-sm-10">
            <label><input type="checkbox" name="Teacher" /> Study A</label>
            <label><input type="checkbox" name="Teacher" /> Study B</label>
            <label><input type="checkbox" name="Teacher" /> Study C</label>
            <label><input type="checkbox" name="Teacher" /> Study D</label>
            <label><input type="checkbox" name="Teacher" /> Study E</label>
            @Html.ActionLink("Add Study", "StudyAddEdit", "Study", new object { }, new { @class = "btn btn-link" }) 
        </div>
    </div>
   
    <div class="form-group">
        <label class="control-label col-sm-2" for="email">Name:</label>
        <div class="col-sm-4">
            <input type="email" class="form-control" id="Name" placeholder="Enter email">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Date of Birth:</label>
        <div class="col-sm-4">
            <input type="date" class="form-control" id="pwd" placeholder="Enter password">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="gender">Gender:</label>
        <div class="col-sm-4">
            <div class="radio-inline"><label><input type="radio" name="optradio">Male</label></div>
            <div class="radio-inline"><label><input type="radio" name="optradio">Female</label></div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="parent">Parent:</label>
        <div class="col-sm-4">
            <select id="parent" class="form-control"><option>Select Parent</option><option>Parent A</option><option>Parent B</option><option>Parent C</option><option>Parent D</option></select>
        </div><div class="col-sm-2"><a href="javascript:void(0);" class="btn btn-link" onclick="$('#addParent').slideDown();">Add Parent</a>
        </div>
    </div>
    <div id="addParent" class="_panel" style="display:none;">

        <div class="form-group">
            <label class="control-label col-sm-2">Parent Name</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="parent" placeholder="Parent Name">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="gender">Email:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="parent" placeholder="Email">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="parent">Password:</label>
            <div class="col-sm-4">

                <input type="password" class="form-control" id="parent" placeholder="Password">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="parent">Confirm Password:</label>
            <div class="col-sm-4">

                <input type="password" class="form-control" id="parent" placeholder="Confirm Password">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2"> </label>
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Add Parent</button>
                <button type="submit" class="btn btn-default" onclick="$('#addSchool').slideUp();">Cancel</button>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="school">School:</label>
        <div class="col-sm-4">
            <select id="school" class="form-control"><option>Choose School</option><option>School A</option><option>School B</option><option>School C</option><option>School D</option></select>
            </div><div class="col-sm-2"><a href="javascript:void(0);" class="btn btn-link" onclick="$('#addSchool').slideDown();">Add School</a>
        </div>
    </div>
    <div id="addSchool" class="_panel" style="display:none;">

        <div class="form-group">
            <label class="control-label col-sm-2">School Name</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="parent" placeholder="School Name">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2"> </label>
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Add School</button>
                <button type="submit" class="btn btn-default" onclick="$('#addSchool').slideUp();">Cancel</button>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="teacher">Teacher:</label>
        <div class="col-sm-10">
            <label><input type="checkbox" name="Teacher" /> Teacher A</label>
            <label><input type="checkbox" name="Teacher" /> Teacher B</label>
            <label><input type="checkbox" name="Teacher" /> Teacher C</label>
            <label><input type="checkbox" name="Teacher" /> Teacher D</label>
            <label><input type="checkbox" name="Teacher" /> Teacher E</label>


        
            <a href="javascript:void(0);" class="btn btn-link" onclick="$('#addTeacher').slideDown();">Add Teacher</a>
        </div>
    </div>
    <div id="addTeacher" class="_panel" style="display:none;">
 
        <div class="form-group">
            <label class="control-label col-sm-2">Teacher Name:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="parent" placeholder="Teacher Name">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="gender">Email:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="parent" placeholder="Email">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="parent">Password:</label>
            <div class="col-sm-4">

                <input type="password" class="form-control" id="parent" placeholder="Password">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="parent">Confirm Password:</label>
            <div class="col-sm-4">

                <input type="password" class="form-control" id="parent" placeholder="Confirm Password">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2"> </label>
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Add Teacher</button>
                <button type="submit" class="btn btn-default" onclick="$('#addTeacher').slideUp();">Cancel</button>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="school">Status:</label>
        <div class="col-sm-4">
            <select id="school" class="form-control"><option>Enrolled</option><option>Lost Followup</option><option>With Drew Consent</option><option>No Longer at School</option></select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <button type="submit" class="btn btn-default">Save Child Information</button>
        </div>
    </div>
</form>