                            <div class="btn btn-default col-md-12 text-left">Peds quality of life for 13yrs -18yrs@(Html.Raw(getPercentCompletion(9, (int)drch["ID"], url.Replace("__", "17"))))</div>
                        }
                        <div class="btn btn-default col-md-12 text-left">Short language profile @(Html.Raw(getPercentCompletion(10, (int)drch["ID"], url.Replace("__", "10"))))</div>
                        <div class="btn btn-default col-md-12 text-left">Social communication Questionnaire – life time @(Html.Raw(getPercentCompletion(11, (int)drch["ID"], url.Replace("__", "11"))))</div>
                        <div class="btn btn-default col-md-12 text-left">Insomnia Severity Index@(Html.Raw(getPercentCompletion(12, (int)drch["ID"], url.Replace("__", "12"))))</div>
                        <div class="btn btn-default col-md-12 text-left">Connor-Davidson Resilience Scale 10@(Html.Raw(getPercentCompletion(13, (int)drch["ID"], url.Replace("__", "13"))))</div>
                        <div class="btn btn-default col-md-12 text-left">Family Empowerment Scale@(Html.Raw(getPercentCompletion(14, (int)drch["ID"], url.Replace("__", "14"))))</div>

