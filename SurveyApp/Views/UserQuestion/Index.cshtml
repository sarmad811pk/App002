                            <div class="btn btn-default col-md-12 text-left">Behaviors@(Html.Raw(getPercentCompletion(25, (int)drch["ID"], url.Replace("__", "25"))))</div>
                            <div class="btn btn-default col-md-12 text-left">Daily Living Skills/Independence@(Html.Raw(getPercentCompletion(26, (int)drch["ID"], url.Replace("__", "26"))))</div>
                            <div class="btn btn-default col-md-12 text-left">Academic Progress Rating Scales@(Html.Raw(getPercentCompletion(27, (int)drch["ID"], url.Replace("__", "27"))))</div>
                        }
                        <h4 class="col-md-12">Quarterly Scheduled Surveys</h4>
                        <div class="btn btn-default col-md-12 text-left">Abbreviated sensory profile @(Html.Raw(getPercentCompletion(1, (int)drch["ID"], url.Replace("__", "1"))))</div>
                        <div class="btn btn-default col-md-12 text-left">Caregiver Strain Questionnaire@(Html.Raw(getPercentCompletion(2, (int)drch["ID"], url.Replace("__", "2"))))</div>
                        <div class="btn btn-default col-md-12 text-left">GI Severity Index @(Html.Raw(getPercentCompletion(3, (int)drch["ID"], url.Replace("__", "3"))))</div>
                        <div class="btn btn-default col-md-12 text-left">Aberrant Behavior Checklist@(Html.Raw(getPercentCompletion(4, (int)drch["ID"], url.Replace("__", "4"))))</div>
                        <div class="btn btn-default col-md-12 text-left">Social Responsiveness Scale@(Html.Raw(getPercentCompletion(5, (int)drch["ID"], url.Replace("__", "5"))))</div>
                        @if (age <= 4 && age >= 2)
                        {
                            <div class="btn btn-default col-md-12 text-left">Peds quality of life for 2yrs-4yrs@(Html.Raw(getPercentCompletion(6, (int)drch["ID"], url.Replace("__", "6"))))</div>
                        }
                        else if (age <= 7 && age >= 5)
                        {
                            <div class="btn btn-default col-md-12 text-left">Peds quality of life for 5yrs-7yrs@(Html.Raw(getPercentCompletion(7, (int)drch["ID"], url.Replace("__", "7"))))</div>
                        }
                        else if (age <= 12 && age >= 8)
                        {
                            <div class="btn btn-default col-md-12 text-left">Peds quality of life for 8yrs -12yrs@(Html.Raw(getPercentCompletion(8, (int)drch["ID"], url.Replace("__", "8"))))</div>
                        }
                        else if (age <= 18 && age >= 13)
