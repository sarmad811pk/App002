                        @if (roles[0] != "Teacher")
                        {
                            <h4 class="col-md-12">Parent Intake Form</h4>
                            <div class="btn btn-default col-md-3 text-left">General Information@(Html.Raw(getPercentCompletion(16, (int)drch["ID"], url.Replace("__", "16")))))</div>
